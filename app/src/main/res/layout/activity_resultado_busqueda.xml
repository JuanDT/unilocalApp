<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".actividades.ResultadoBusquedaActivity">

    <!-- Barra superior con un estilo similar al que has implementado -->
    <fragment
        android:id="@+id/barra_superior"
        class="com.edu.eam.unilocalapp.fragmentos.MenuPrincipalFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/verde" />

    <!-- RecyclerView con un borde de color verde -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista_lugares"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@drawable/rounded_reciclerview"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</LinearLayout>
