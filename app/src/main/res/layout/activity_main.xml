<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.MainActivity">


    <FrameLayout
        android:id="@+id/contenido_principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigationView"/>


    <fragment
        android:id="@+id/barra_superior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.edu.eam.unilocalapp.fragmentos.MenuPrincipalFragment" />
    <fragment
        android:id="@+id/barra_superio2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.edu.eam.unilocalapp.fragmentos.MenuPrincipalFragment" />




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@drawable/selector_bottom_nav_item"
        app:itemIconTint="@color/verde_oscuro_2"
        app:itemTextColor="@android:color/black"
        app:menu="@menu/navigation_bar" />


</RelativeLayout>
