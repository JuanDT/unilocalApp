<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo de la aplicaciÃ³n -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/verde</item>
        <item name="colorPrimaryDark">@color/verde_oscuro</item>
        <item name="colorAccent">@color/verde_botones</item>

    </style>

    <!-- Registro -->
    <style name="TituloGrande">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoundedEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:hint">Buscar</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:backgroundTint">@color/gris</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/black</item>
        <item name="popupMenuBackground">@color/blanco</item>
        <item name="android:width">180dp</item>

        <!-- Agrega cualquier otro atributo de estilo que desees ajustar -->
    </style>

    <style name="Widget.Theme.UnilocalApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


</resources>